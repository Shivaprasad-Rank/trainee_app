<div id="page-yield">
  <div class="box">
    <div class="sel-list">
      <%= t('select') %> : <%= link_to_function "#{t('all')}", "$$('input.right').each(function(checkbox) { checkbox.checked = true; });" %>,
      <%= link_to_function "#{t('none')}", "$$('input.right').each(function(checkbox) { checkbox.checked = false; });" %>
    </div>

    <div id="list">
      <% form_for(:mnm_shared_subject, :url => {:action=> 'assign_shared_subjects'}) do |f| %>
        <% @shared_subjects.each do |shared_subject| %>
          <div class="name_list<%=cycle('odd', 'even')%>"><li>
              <label><%= check_box_tag "shared_subject_ids[]", shared_subject.id, false, :class => 'right' %>&nbsp;
                <div class="att_list_names" style="font-size:15px;"> <%= shared_subject.name %></div></label>
            </li>  </div>
        <% end %>
        <h4 align="center"><%= t('active_batches') %></h4>

        <ul id="category-list">
          <% @batch.each do |batch| %>
            <li class="list<%=cycle('odd', 'even')%>">
              <label><div><%= check_box_tag "batch_ids[]", batch.id, false, :class => 'right' %></div>&nbsp;
                <div class="category-name"><%= link_to batch.full_name, [batch.course, batch] %></div></label>
            </li>
          <% end %>
        </ul>
        <%= f.submit "Assign Batches",:class=>'submit_button' %>
      <% end %>
    </div>
    <div id="status-message">
    </div>
  </div>
</div>